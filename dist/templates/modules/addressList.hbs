<ul>
    {{#each addresses}}
    <li data-address-id="{{this.id}}">
        <span>{{this.firstname}} {{this.lastname}}</span>
        <span class="email">[{{this.email}}]</span><br/>
        <span>{{this.address_1}}</span><br/>
        <span>{{this.code}} {{this.city}}, {{this.country}}</span>
        <span>{{this.note}}</span>
    </li>
    {{/each}}
</ul>