<div class="product">
    <div class="details collapsed">
        <div class="drop plus"><i class="fa fa-times"></i></div>
        <div class="drop drop-points-left like"><i class="fa fa-heart"></i></div>
        <div class="drop drop-points-left add-to-cart"><i class="fa fa-shopping-cart"></i></div>
    </div>
    <div class="background">
        {{#each images}}
            <div style="background-image: url({{this.url.http}});"></div>
        {{/each}}
    </div>
</div>