<section class="checkout">
    <article>
        <div class="units-1 cut-in-half">
            <div>
                <div class="copy center-y">
                    <h1 data-copy="checkout_headline"></h1>
                    <p data-copy="checkout_subheadline"></p>
                </div>
            </div>
        </div>
    </article>
    
    <article>
        <div class="content">
            <div class="units-table">
                <div id="billing-address" class="unit">
                    <div class="copy">
                        <h2 data-copy="checkout_billing_headline"></h2>
                        <div class="user-address-list"></div>
                        <button class="new-address-button">
                            <span data-copy="checkout_add_address_button"></span>
                        </button>
                        <form class="new-address-form" autocomplete="on">
                            <h3 data-copy="checkout_new_address_headline"></h3>
                            
                            <div class="firstname">
                                <input autocomplete="on" type="text" placeholder="first name" required="">
                                <label>Your lovely first name</label>
                            </div>
                            <div class="lastname">
                                <input autocomplete="on" type="text" placeholder="last name" required="">
                                <label>What's your last name?</label>
                            </div>
                            <div class="email">
                                <input autocomplete="on" type="email" placeholder="email" required="">
                                <label>We need an email to contact you</label>
                            </div>
                            <div class="address_1">
                                <input autocomplete="on" type="text" placeholder="street / apt number" required="">
                                <label>Your Address</label>
                            </div>
                            <div class="code">
                                <input autocomplete="on" type="text" placeholder="area code" required="">
                                <label>Area Code</label>
                            </div>
                            <div class="city">
                                <input autocomplete="on" type="text" placeholder="city" required="">
                                <label>We hear your city is awesome</label>
                            </div>
                            <div class="country">
                                <select type="text" required="">
                                    <option value="DE">DE</option>
                                    <option value="CH">CH</option>
                                    <option value="AT">AT</option>
                                </select>
                            </div>
                            <div class="note">
                                <textarea placeholder="Any special notes?"></textarea>
                            </div>
                            
                            <button type="submit" class="save green"><span data-copy="checkout_save_address_button"></span></button>
                            <button type="reset" class="cancel" data-copy="checkout_cancel_address_button"></button>
                        </form>
                    </div>
                </div>
                <div id="shipping-address" class="unit">
                    <div class="copy">
                        <h2 data-copy="checkout_shipping_headline"></h2>
                        <div class="user-address-list"></div>
						<button class="new-address-button">
                            <span data-copy="checkout_add_address_button"></span>
                        </button>
                        <form class="new-address-form" autocomplete="on">
                            <h3 data-copy="checkout_new_address_headline"></h3>
                            
                            <div class="firstname">
                                <input autocomplete="on" type="text" placeholder="first name" required="">
                                <label>Your lovely first name</label>
                            </div>
                            <div class="lastname">
                                <input autocomplete="on" type="text" placeholder="last name" required="">
                                <label>What's your last name?</label>
                            </div>
                            <div class="email">
                                <input autocomplete="on" type="email" placeholder="email" required="">
                                <label>We need an email to contact you</label>
                            </div>
                            <div class="address_1">
                                <input autocomplete="on" type="text" placeholder="street / apt number" required="">
                                <label>Your Address</label>
                            </div>
                            <div class="code">
                                <input autocomplete="on" type="text" placeholder="area code" required="">
                                <label>Area Code</label>
                            </div>
                            <div class="city">
                                <input autocomplete="on" type="text" placeholder="city" required="">
                                <label>We hear your city is awesome</label>
                            </div>
                            <div class="country">
                                <select type="text" required="">
                                    <option value="DE">DE</option>
                                    <option value="CH">CH</option>
                                    <option value="AT">AT</option>
                                </select>
                            </div>
                            <div class="note">
                                <textarea placeholder="Any special notes?"></textarea>
                            </div>
                            
                            <button type="submit" class="save green"><span data-copy="checkout_save_address_button"></span></button>
                            <button type="reset" class="cancel" data-copy="checkout_cancel_address_button"></button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="units-table">
                <div id="cart-preview">
                    <div class="copy">
                        <h2 data-copy="checkout_cart_headline"></h2>
                        <div class="cart"></div>
                    </div>
                </div>
                <div id="payment-choice">
                    <div class="copy">
                        <h2 data-copy="checkout_pay_headline"></h2>
                        <ul>
                            <li><input type="radio" name="paymentOption" id="paypal" value="paypal-express" disabled /><label class="disabled" for="paypal">Paypal</label></li>
                            <li><input type="radio" name="paymentOption" id="transfer" value="manual" checked /><label for="transfer">Manual Transfer</label></li>
                        </ul>
                        <button class="button buy"><span data-copy="checkout_process_order_button"></span></button>
                    </div>
                </div>
            </div>
        </div>
    </article>
</section>