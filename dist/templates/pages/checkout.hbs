                            <input autocomplete="on" class="firstname" type="text" placeholder="first name" required="">
                            <input autocomplete="on" class="lastname" type="text" placeholder="last name" required="">
                            <input autocomplete="on" class="email" type="email" placeholder="email" required="">
                            <input autocomplete="on" class="street" type="text" placeholder="street / apt number" required="">
                            <input autocomplete="on" class="code" type="text" placeholder="area code" required="">
                            <input autocomplete="on" class="city" type="text" placeholder="city" required="">
                            <select class="country" type="text" required="">
                                <option value="DE">Germany</option>
                                <option value="CH">Schweiz</option>
                                <option value="AT">Österreich</option>
                            </select>
                            <textarea class="note" placeholder="Any special notes?"></textarea>
                            <button type="reset" class="cancel">Cancel</button>
                            <button type="submit" class="save green"><span>Save Address</span></button>
                        </form>
                    </div>
                </div>
                <div>
                    <div class="copy">
                        <h2>Shipping Address</h2>
                    </div>
                </div>
            </div>
        </div>
