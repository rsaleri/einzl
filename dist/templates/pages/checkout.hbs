<section class="checkout">
    <article>
        <div class="units-1 cut-in-half">
            <div>
                <div class="copy center-y">
                    <h1>Checkout</h1>
                    <p>There is no waiting in line. We promise.</p>
                </div>
            </div>
        </div>
    </article>
    
    <article>
        <div class="content">
            <div class="units">
                <div>
                    <div class="copy">
                        <h2>Billing Address</h2>
                        <div class="user-address-list"></div>
                        <button class="new-address-button">
                            <span><i class=" fa fa-plus"></i> Add New Address</span>
                        </button>
                        <form class="new-address-form" autocomplete="on">
                            <h3>New Address</h3>
                            <input autocomplete="on" class="firstname" type="text" placeholder="first name" required="">
                            <input autocomplete="on" class="lastname" type="text" placeholder="last name" required="">
                            <input autocomplete="on" class="email" type="email" placeholder="email" required="">
                            <input autocomplete="on" class="street" type="text" placeholder="street / apt number" required="">
                            <input autocomplete="on" class="code" type="text" placeholder="area code" required="">
                            <input autocomplete="on" class="city" type="text" placeholder="city" required="">
                            <select class="country" type="text" required="">
                                <option value="DE">DE</option>
                                <option value="CH">CH</option>
                                <option value="AT">AT</option>
                            </select>
                            <textarea class="note" placeholder="Any special notes?"></textarea>
                            <button type="submit" class="save green"><span>Save Address</span></button>
                            <button type="reset" class="cancel">Cancel</button>
                        </form>
                    </div>
                </div>
                <div>
                    <div class="copy">
                        <h2>Shipping Address</h2>
                        <div class="user-address-list"></div>
                    </div>
                </div>
            </div>
            <div class="units">
                <div>
                    <div class="copy">
                        <h2>Your Cart</h2>
                        <div class="cart"></div>
                    </div>
                </div>
                <div>
                    <div class="copy">
                        <h2>Payment</h2>
                        <form class="payment-options">
                            <ul>
                                <li><input type="radio" name="paymentOption" id="paypal" value="paypal" /><label for="paypal">Paypal</label></li>
                                <li><input type="radio" name="paymentOption" id="credit" value="credit" /><label for="credit">Credit Card</label></li>
                                <li><input type="radio" name="paymentOption" id="transfer" value="transfer" /><label for="transfer">Manual Transfer</label></li>
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </article>
</section>