<section class="product-details">
	
	
	<div class="units-table">
		
		<div>
			
			<div class="image-gallery">
				
				<div class="images">
					
					{{#each images}}

						{{#if @first}}	
							<img src="{{this.url.https}}" class="active">
						{{else}}
							<img src="{{this.url.https}}">
						{{/if}}


					{{/each}}
				</div>
				

				<div class="gallery-navigation">

					{{#each images}}

						{{#if @first}}
							<div class="thumb" style="background-image: url({{this.url.https}})" class="active"></div>
						{{else}}
							<div class="thumb" style="background-image: url({{this.url.https}})"></div>
						{{/if}}


					{{/each}}

				</div>
			</div>

		</div>
		<div>

			<div class="details-panel">

				<h2>{{title}} <span class="sold">SOLD OUT</span></h2>
				<p>{{description}}</p>
				<div class="cart-info">
					<div class="price">
						<span>{{price.value}}</span>
					</div>
					<div class="button add-to-cart">
						<span><i class="fa fa-shopping-cart"></i></span>
					</div>
				</div>
				
				
				<ul class="accordeon">
